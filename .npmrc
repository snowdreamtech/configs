home=https://www.npmjs.org
registry=https://registry.npmjs.org/
save-exact=true

# Package Management Optimization
shamefully-hoist=true # If using Yarn, enable shared Node modules
engine-strict=true # Enforce engine requirements in package.json
package-lock=true # Ensure package-lock.json is used
node-options="--max-old-space-size=4096" # Increase Node.js memory limit

# Performance Settings
cache-min=10 # Set minimum cache retention time (minutes)
prefer-offline=true # Prefer using offline cache
timeout=60000 # Set longer timeout (milliseconds)

# Retry Strategy
fetch-retries=3 # Set number of retries
fetch-retry-factor=2 # Set retry factor
fetch-retry-mintimeout=10000 # Minimum retry wait time (milliseconds)
fetch-retry-maxtimeout=60000 # Maximum retry wait time (milliseconds)

# UI and Logging Settings
loglevel=warn # Set log level to warning
fund=false # Disable funding information prompts
progress=false # Disable progress bar, improves log readability in CI environments
update-notifier=true # Check for npm updates

# Git-related
git-tag-version=true # Automatically create git tags when creating versions

# Security
audit=true # Perform security audits